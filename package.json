{
  "name": "udemy-playwright",
  "version": "1.0.0",
  "description": "Automated software testing with playwright",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tests:chrome": "playwright test --config=playwright.config.ts --project=Chromium",
    "tests:firefox": "playwright test --config=playwright.config.ts --project=Firefox",
    "tests:webkit": "playwright test --config=playwright.config.ts --project=Webkit",
    "tests:e2e": "playwright test --config=e2e.config.ts --project=Chromium",
    "tests:visual:chrome": "playwright test --config=playwright.config.ts --project=Chromium",
    "tests:visual:firefox": "playwright test --config=playwright.config.ts --project=Firefox",
    "tests:visual:webkit": "playwright test --config=playwright.config.ts --project=Webkit",
    "tests:visual:chrome:update": "playwright test --config=playwright.config.ts --project=Chromium --update-snapshots",
    "tests:visual:firefox:update": "playwright test --config=playwright.config.ts --project=Firefox --update-snapshots",
    "tests:visual:webkit:update": "playwright test --config=playwright.config.ts --project=Webkit --update-snapshots"
  },
  "author": "Valentin",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.33.0",
    "prettier": "^2.8.8"
  }
}
